@model MusicSearch

<style>
    body {
        background-color: #BFE7DC;
    }

    table {
        border-collapse: separate;
        width: 100%;
    }

    td {
        background-color: white;
        border-bottom: solid 2px #10909A;
        border-top: solid 2px #10909A;
        box-shadow: 1px 1px 1px #999;
        padding: 2px;
        width: 25%;
    }

    tr td:first-child {
        border-left: solid 2px #10909A;
    }

    tr td:last-child {
        border-right: solid 2px #10909A;
    }

    tr:first-child td:first-child {

        border-top-left-radius: 10px;
    }

    tr:first-child td:last-child {
        border-top-right-radius: 10px;
    }

    tr:last-child td:first-child {
        border-bottom-left-radius: 10px;
    }

    tr:last-child td:last-child {
        border-bottom-right-radius: 10px;
    }
</style>

<table>
    @foreach (Datum d in Model.data)
    {
    <tr>
        <td>
            <p><b>Title:</b> @d.title</p>
            @{
                int minutes = d.duration / 60;
                int seconds = d.duration - (minutes * 60);
                string length = "" + minutes + ":";
                if (seconds < 10)
                {
                    length = length + "0" + seconds;
                }
                else
                {
                    length = length + seconds;
                }
                <p><b>Length:</b> @length</p>
            }
        </td>
        <td>
            <p><b>Artist:</b> @d.artist.name </p>
            <p><b>Album:</b> @d.album.title </p>
        </td>
        <td>
            <form asp-area="" asp-controller="Music" asp-action="MusicSearch" asp-route-data="@d.artist.name" asp-route-SearchBy="artist"><button>Search Artist</button></form>
            <form asp-area="" asp-controller="Music" asp-action="AlbumSearch" asp-route-albumId="@d.album.id"><button>Search Album</button></form>
        </td>
    </tr>
    }
</table>
