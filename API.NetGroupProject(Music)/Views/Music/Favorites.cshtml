

    
    
@model List<Favorites>
    <h2>Favorites</h2>

    <head>
        <style>
        body { background-image: url("https://www.thewanderinglens.com/wp-content/uploads/2018/12/HEADER-Tokyo-Photography-Locations-A-Photographers-Guide-to-Photo-Spots-in-Tokyo.jpg"); }
            h2 {
                text-align: center;
            }
            #favorites {
                margin-left: auto;
                margin-right: auto;
            }
            #site-footer {
                background: #ddd;
            }
            .button {
                background-color: #cc99ff;
            }
            #favorites {
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width: 75%;
            }

                #favorites td, #favorites th {
                    background-color: #ccf5ff;
                    border: 1px solid black;
                    padding-top: 2px;
                    padding-bottom: 2px;
                    text-align: center;
                }

                #favorites tr:nth-child(even) {
                    background-color: #ccf5ff;
                    text-align: center;
                }

                #favorites tr:hover {
                    background-color: #ddd;
                }

                #favorites th {
                    padding-top: 4px;
                    padding-bottom: 4px;
                    text-align: center;
                    background-color: #cc99ff;
                    color: black;
                }
        </style>
    </head>
<table id="favorites">
    <tr>
        <th>#</th>
        <th>Artist</th>
        <th>Song</th>
        <th>Album</th>
        <th>Remove</th>
    </tr>
    @foreach(Favorites f in Model)
    {
        <tr>
            <td>
                <p>@f.Id</p>
            </td>
            <td>
                <p>@f.Artist</p>
            </td>
            <td>
                <p>@f.Album</p>
            </td>
            <td>
                <p>@f.AlbumId</p>
            </td>
            <td>
                <form asp-controller="Music" asp-action="RemoveFavorite">
                    <input type="submit" value="Remove" />
                </form>
            </td>
        </tr>
    }
</table>

