@*For Artists in a MusicSearch's Datum*@
@foreach (Datum d in Model.data)
{
    //if (d.artist.name == ViewBag.ArtistName)
    if (d.artist.id == ViewBag.ArtistID)
    {
        <h4>Results for Artist ID: @d.artist.id</h4>
        <p><b>Name:</b> @d.artist.name</p>
        <img src="@d.artist.picture" alt="picture" />
        <img src="@d.album.md5_image" alt="md5_image" />
        <p><b>Track List:</b> <a href=@d.artist.tracklist>@d.artist.tracklist</a></p>
        <p><b>Type:</b> @d.artist.type</p>
        <p><b>Link:</b> <a href=@d.artist.link>@d.artist.link</a></p>
    }
}

